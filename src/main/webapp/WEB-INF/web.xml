<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>ru.asmi.servlets.Registration</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>auth</servlet-name>
        <servlet-class>ru.asmi.servlets.Auth</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>auth</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>leave_session</servlet-name>
        <servlet-class>ru.asmi.servlets.LeaveSession</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>leave_session</servlet-name>
        <url-pattern>/leave_session</url-pattern>
    </servlet-mapping>
</web-app>